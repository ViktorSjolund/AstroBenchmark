---
import Layout from '../layouts/Layout.astro';
const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <article class="flex flex-col w-full overflow-x-clip items-center center text-slate-800 p-2">
    <h1 class="text-4xl font-bold">{frontmatter.title}</h1>
    <div class="py-6">{frontmatter.date}</div>
    <div class="flex flex-col items-center w-full prose pb-20"><slot /></div>
  </article>
</Layout>
